{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist/",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  "include": ["src/**/*", "entities"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
